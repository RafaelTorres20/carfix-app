{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": [
    "./src/**/*.d.ts",
    "./src/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "src/__mocks__/svgMock.js",
    "./src/@types/files.d.ts"
  ],
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation"
          ]
        }
      }
    ]
  }
}
